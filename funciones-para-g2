void GiroDer()
{
  int g1;
  int g2;
  
  g1 = heading();
  if((g1 >= 270 && g1 <= 359) || (g1 >= 0 && g1 <= 90))
  {
    g2 = acos(cos(g1 + 90));
  }
  else if(g1 < 270 && g1 > 90)
  {
    g2 = ((g1 - 90) * 2) + (acos(cos(g1 + 90)));
  }
}

void GiroIzq()
{
  g1 = heading();
  if(g1 <= 270 && g1 >= 90)
  {
    g2 = acos(cos(g1 - 90));
  }
  else if((g1 > 270 && g1 <= 359) || (g1 >= 0 && g1 < 90))
  {
    g2 = -1 * ((acos(cos(g1-90))) - 360);
  }
}
