//Sensor derecha
int ultrasonico1 () 
{ 
 long SumaDistancias = 0;
 long Distancia1 = 0;
 long  Distancia2 = 0;
 long Distancia3 = 0;
 long DistanciaSenDerecha;
 int iI;
 
  for (iI=1; iI<=3; iI++)
  {
  digitalWrite(9,LOW);  
  delayMicroseconds(5);
  digitalWrite(9, HIGH);   
  delayMicroseconds(10);  
  tiempo1 = pulseIn(8, HIGH);   

 delayMicroseconds(50);
    if ( iI==1 )
    {
      Distancia1 = int(0.017*tiempo1);
    }
    else if ( iI== 2 )
    {
      Distancia2 = int(0.017*tiempo1);
    }
    else if ( iI==3 )
    {
      Distancia3 = int(0.017*tiempo1);
    }
   }

  if (Distancia1 > Distancia2 && Distancia1 > Distancia3)
  {
    if (Distancia2 > Distancia3)
    {
      DistanciaSenDerecha = Distancia2;
    }
    else
    {
      DistanciaSenDerecha = Distancia3;
    }
  }
  if (Distancia2 > Distancia1 && Distancia2 > Distancia3)
  {
    if (Distancia1 > Distancia3)
    {
      DistanciaSenDerecha = Distancia1;
    }
    else
    {
      DistanciaSenDerecha = Distancia3;
    }
  }
  if (Distancia3 > Distancia1 && Distancia3 > Distancia2)
  {
    if (Distancia2 > Distancia1)
    {
      DistanciaSenDerecha = Distancia2;
    }  
    else 
    {
      DistanciaSenDerecha = Distancia1;
    }
  }
  if (Distancia1 == Distancia2)
  {
   DistanciaSenDerecha=Distancia1;
  }
  if (Distancia1 == Distancia3)
  {
   DistanciaSenDerecha=Distancia1;
  }
  if (Distancia2 == Distancia3)
  {
   DistanciaSenDerecha=Distancia2;
  }
  if (Distancia1 == Distancia2 && Distancia1 == Distancia3)
  {
   DistanciaSenDerecha=Distancia1;
  }
  return DistanciaSenDerecha;
}


//Sensor frontal
int ultrasonico2 () 
{ 
  
 long SumaDistancias = 0;
 long Distancia1 = 0;
 long  Distancia2 = 0;
 long Distancia3 = 0;
 long DistanciaSenDerecha;
 int iI;

 for (iI=1; iI<=3; iI++)
  {
  digitalWrite(7,LOW);
  delayMicroseconds(5);
  digitalWrite(7, HIGH); 
  delayMicroseconds(10);  
  tiempo1 = pulseIn(6, HIGH);     

 delayMicroseconds(50);
    if ( iI==1 )
    {
      Distancia1 = int(0.017*tiempo1);
    }
    else if ( iI== 2 )
    {
      Distancia2 = int(0.017*tiempo1);
    }
    else if ( iI==3 )
    {
      Distancia3 = int(0.017*tiempo1);
    }
   }

  if (Distancia1 > Distancia2 && Distancia1 > Distancia3)
  {
    if (Distancia2 > Distancia3)
    {
      DistanciaSenDerecha = Distancia2;
    }
    else
    {
      DistanciaSenDerecha = Distancia3;
    }
  }
  if (Distancia2 > Distancia1 && Distancia2 > Distancia3)
  {
    if (Distancia1 > Distancia3)
    {
      DistanciaSenDerecha = Distancia1;
    }
    else
    {
      DistanciaSenDerecha = Distancia3;
    }
  }
  if (Distancia3 > Distancia1 && Distancia3 > Distancia2)
  {
    if (Distancia2 > Distancia1)
    {
      DistanciaSenDerecha = Distancia2;
    }  
    else 
    {
      DistanciaSenDerecha = Distancia1;
    }
  }
  if (Distancia1 == Distancia2)
  {
   DistanciaSenDerecha=Distancia1;
  }
  if (Distancia1 == Distancia3)
  {
   DistanciaSenDerecha=Distancia1;
  }
  if (Distancia2 == Distancia3)
  {
   DistanciaSenDerecha=Distancia2;
  }
  if (Distancia1 == Distancia2 && Distancia1 == Distancia3)
  {
   DistanciaSenDerecha=Distancia1;
  }
  return DistanciaSenDerecha;
} 







void zonaB()
{
  int der=ultrasonico1();
  int fr=ultrasonico2(); 
  
  if(der <= 9 && fr > 9) // Avanza al frente
  {
     while(fr > 9)
     {
      adelantelento();
      fr=ultrasonico2();
     }
   detenerse();
   der=ultrasonico1(); 
   fr=ultrasonico2();
   delay(250);
  }
  else if (der <= 9 && fr <= 9) // Izquierda
  {
    izquierda90();
    pararVuelta();
    der=ultrasonico1(); fr=ultrasonico2();
    delay(250);
  }
  else if (der > 9) // Derecha
  {
   derecha90();
   pararVuelta();
   delay(250);
      
      while(fr > 13)
      {
      adelantelento();
      fr=ultrasonico2();
      }
   detenerse();
   der=ultrasonico1(); 
   fr=ultrasonico2();
   delay(250);
   }
}

